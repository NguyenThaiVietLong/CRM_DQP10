                      },
                    ],
                    status: "Đang thực hiện",
                  },
                  {
                    id: 3,
                    name: "Kiểm tra trang bị vũ khí quý 1",
                    workType: "kehoach",
                    workGroup: "KTTC",
                    department: "3",
                    startDate: "10/01/2026",
                    endDate: "15/01/2026",
                    documentNumber: "789/QĐ-BCH",
