                ];

                localStorage.setItem(
                  "dqp10_activities",
                  JSON.stringify(sampleActivities),
                );
                console.log("✅ Initialized sample activities data");
              }
            },

            loadActivities() {
              const data = localStorage.getItem("dqp10_activities");
              if (data) {
                this.activities = JSON.parse(data);

                // Filter based on user role
                if (this.currentUser.role === "admin") {
                  // Admin sees all activities
                  this.filteredActivities = this.activities;
                } else {
                  // DQTT users only see activities from their team
                  const userTeam = this.currentUser.team; // e.g. "Tổ 3"
                  const teamNumber = userTeam
                    ? userTeam.replace("Tổ ", "")
                    : null;

                  if (teamNumber) {
                    this.filteredActivities = this.activities.filter(
                      (activity) => activity.department === teamNumber,
                    );
                  } else {
                    // If no team, show all (fallback)
                    this.filteredActivities = this.activities;
                  }
                }

                console.log(
                  `Loaded ${this.activities.length} activities, showing ${this.filteredActivities.length} filtered`,
                );
              }
            },

            getStatusColor(status) {
              if (status === "Hoàn thành") return "bg-green-100 text-green-700";
              if (status === "Đang thực hiện") return "bg-blue-100 text-blue-700";
              return "bg-gray-100 text-gray-700";
            },

            logout() {
              localStorage.removeItem("dqp10_session");
              window.location.href = "login.html";
            },
          };
        }
    </script>

