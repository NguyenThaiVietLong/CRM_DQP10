      <script>
        function listApp() {
          return {
            currentUser: {
              fullName: "Guest",
              role: null,
              team: null,
            },
            activities: [],
            filteredActivities: [],

            init() {
              // Check authentication
              const session = localStorage.getItem("dqp10_session");
              if (!session) {
                window.location.href = "login.html";
                return;
              }
              this.currentUser = JSON.parse(session);

              // Initialize sample data if not exists
              this.initSampleData();

              // Load activities
              this.loadActivities();
            },

            initSampleData() {
              const existing = localStorage.getItem("dqp10_activities");
              if (!existing) {
                const sampleActivities = [
                  {
                    id: 1,
